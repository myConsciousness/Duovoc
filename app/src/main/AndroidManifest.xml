<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="android.app.ks.thinkit.duovoc">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="android.app.ks.thinkit.duovoc.SessionSharedPreferences"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- テスト用 -->
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-3940256099942544~3347511713" />

        <activity
            android:name="android.app.ks.thinkit.duovoc.IntroductionActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="android.app.ks.thinkit.duovoc.LoginActivity"
            android:label="Sign in" />
        <activity
            android:name="android.app.ks.thinkit.duovoc.OverviewActivity"
            android:label="Overview" />
        <activity
            android:name="android.app.ks.thinkit.duovoc.DetailActivity"
            android:label="Detail" />
        <activity
            android:name="android.app.ks.thinkit.duovoc.SettingsActivity"
            android:label="Settings" />

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />
    </application>

</manifest>