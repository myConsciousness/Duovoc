        android:text="TextView" />

    <TextView
        android:id="@+id/relatedLessonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="right"
        android:text="TextView" />
</LinearLayout>